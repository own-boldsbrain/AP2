# Arquivo de configuração para ambiente de desenvolvimento

# Configurações do servidor
HOST=0.0.0.0
PORT=8020
RELOAD=true
LOG_LEVEL=DEBUG

# Banco de dados
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/yellowsolar
INIT_DB=true

# Serviços externos
TARIFF_SERVICE_URL=http://localhost:8021
VIABILITY_SERVICE_URL=http://localhost:8022
PROPOSAL_SERVICE_URL=http://localhost:8023
LEAD_SERVICE_URL=http://localhost:8024

# NATS
NATS_URL=nats://localhost:4222
NATS_CLUSTER_ID=ysh-cluster
NATS_CLIENT_ID=pre-orchestrator-dev

# Telemetria
ENABLE_TELEMETRY=true
OTLP_ENDPOINT=http://localhost:4317

# Configurações do agente
DEFAULT_SYSTEM_LOSS=0.14
DEFAULT_PR=0.80
DEFAULT_HSP=5.0
BASE_TIER_FACTOR=1.00
PLUS_TIER_FACTOR=1.30
PRO_TIER_FACTOR=1.60

# Recursos
MAX_CONCURRENT_REQUESTS=10
REQUEST_TIMEOUT_SECONDS=30
RETRY_ATTEMPTS=3
RETRY_BACKOFF_SECONDS=2