# Arquivo de configuração para ambiente de produção

# Configurações do servidor
HOST=0.0.0.0
PORT=8020
RELOAD=false
LOG_LEVEL=INFO

# Banco de dados
DATABASE_URL=postgresql://yellowsolar:${DB_PASSWORD}@postgres:5432/yellowsolar
INIT_DB=false

# Serviços externos
TARIFF_SERVICE_URL=http://tariff-service:8000
VIABILITY_SERVICE_URL=http://viability-service:8000
PROPOSAL_SERVICE_URL=http://proposal-service:8000
LEAD_SERVICE_URL=http://lead-service:8000

# NATS
NATS_URL=nats://nats:4222
NATS_CLUSTER_ID=ysh-cluster
NATS_CLIENT_ID=pre-orchestrator-prod

# Telemetria
ENABLE_TELEMETRY=true
OTLP_ENDPOINT=http://otel-collector:4317

# Configurações do agente
DEFAULT_SYSTEM_LOSS=0.14
DEFAULT_PR=0.80
DEFAULT_HSP=5.0
BASE_TIER_FACTOR=1.00
PLUS_TIER_FACTOR=1.30
PRO_TIER_FACTOR=1.60

# Recursos
MAX_CONCURRENT_REQUESTS=50
REQUEST_TIMEOUT_SECONDS=15
RETRY_ATTEMPTS=3
RETRY_BACKOFF_SECONDS=2