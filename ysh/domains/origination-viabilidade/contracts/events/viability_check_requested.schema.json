{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "ViabilityCheckRequested",
  "description": "Evento emitido quando uma nova verificação de viabilidade é solicitada.",
  "type": "object",
  "properties": {
    "check_id": {
      "type": "string",
      "format": "uuid"
    },
    "customer_info": {
      "type": "object",
      "properties": {
        "name": { "type": "string" },
        "document": { "type": "string" }
      },
      "required": ["name", "document"]
    },
    "location": {
      "type": "object",
      "properties": {
        "latitude": { "type": "number" },
        "longitude": { "type": "number" },
        "address": { "type": "string" }
      },
      "required": ["latitude", "longitude"]
    }
  },
  "required": ["check_id", "customer_info", "location"]
}
