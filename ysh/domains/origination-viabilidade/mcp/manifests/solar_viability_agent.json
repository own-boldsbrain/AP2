{
      "name": "SolarViabilityAgent",
      "description": "An agent that analyzes the viability of solar energy for a given location.",
      "capabilities": {
            "extensions": [
                  {
                        "uri": "https://github.com/google-agentic-commerce/ap2/v1",
                        "description": "Supports the Agent Payments Protocol.",
                        "required": true
                  }
            ]
      },
      "skills": [
            {
                  "id": "calculate_solar_position",
                  "name": "Calculate Solar Position",
                  "description": "Calculates the solar zenith and azimuth angles for a given location and date.",
                  "parameters": {
                        "type": "object",
                        "properties": {
                              "latitude": {
                                    "type": "number",
                                    "description": "Latitude of the location."
                              },
                              "longitude": {
                                    "type": "number",
                                    "description": "Longitude of the location."
                              },
                              "date": {
                                    "type": "string",
                                    "description": "Date and time in ISO format (e.g., '2023-01-01T12:00:00')."
                              }
                        },
                        "required": [
                              "latitude",
                              "longitude",
                              "date"
                        ]
                  },
                  "tags": [
                        "solar",
                        "position",
                        "calculation"
                  ]
            },
            {
                  "id": "get_irradiance",
                  "name": "Get Irradiance",
                  "description": "Calculates the irradiance on a tilted surface.",
                  "parameters": {
                        "type": "object",
                        "properties": {
                              "latitude": {
                                    "type": "number",
                                    "description": "Latitude of the location."
                              },
                              "longitude": {
                                    "type": "number",
                                    "description": "Longitude of the location."
                              },
                              "date": {
                                    "type": "string",
                                    "description": "Date and time in ISO format (e.g., '2023-01-01T12:00:00')."
                              },
                              "tilt": {
                                    "type": "number",
                                    "description": "The tilt of the surface in degrees."
                              },
                              "azimuth": {
                                    "type": "number",
                                    "description": "The azimuth of the surface in degrees."
                              }
                        },
                        "required": [
                              "latitude",
                              "longitude",
                              "date",
                              "tilt",
                              "azimuth"
                        ]
                  },
                  "tags": [
                        "solar",
                        "irradiance",
                        "energy"
                  ]
            },
            {
                  "id": "get_pvsystem_performance",
                  "name": "Get PV System Performance",
                  "description": "Calculates the performance of a simple PV system.",
                  "parameters": {
                        "type": "object",
                        "properties": {
                              "latitude": {
                                    "type": "number",
                                    "description": "Latitude of the location."
                              },
                              "longitude": {
                                    "type": "number",
                                    "description": "Longitude of the location."
                              },
                              "date": {
                                    "type": "string",
                                    "description": "Date and time in ISO format (e.g., '2023-01-01T12:00:00')."
                              },
                              "tilt": {
                                    "type": "number",
                                    "description": "The tilt of the surface in degrees."
                              },
                              "azimuth": {
                                    "type": "number",
                                    "description": "The azimuth of the surface in degrees."
                              },
                              "module_pdc0": {
                                    "type": "number",
                                    "description": "The DC power of the module at standard test conditions."
                              }
                        },
                        "required": [
                              "latitude",
                              "longitude",
                              "date",
                              "tilt",
                              "azimuth",
                              "module_pdc0"
                        ]
                  },
                  "tags": [
                        "solar",
                        "pv",
                        "system",
                        "performance"
                  ]
            }
      ],
      "defaultInputModes": [
            "application/json",
            "text/plain"
      ],
      "defaultOutputModes": [
            "application/json"
      ],
      "url": "http://localhost:8004/mcp/solar_viability_agent",
      "version": "1.0.0"
}
